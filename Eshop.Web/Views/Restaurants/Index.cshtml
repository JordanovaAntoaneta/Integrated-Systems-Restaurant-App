@{
}

@model List<Restaurant.Domain.Domain.Restaurant>

<h1>Restaurants</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

@for(int i = 0; i < Model.Count; i++)
{
     var item = Model[i];
    if (i % 3 == 0)
    {
        @:<div class="row">
    }

    <div class="col-md-3">
        <div class="card" style="width: 18rem; height: 30rem;">
            <img class="card-img-top" src="@item.RestaurantImage" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Name: @item.Name</h5>
                <p class="card-text">Description: @item.Description</p>
                <p class="card-text">Address: @item.Address</p>
                <p class="card-text">Opening hours: @item.OpeningHours</p>
                <h6>Rating: @item.Rating</h6>

                <a asp-controller="Menues" asp-action="ListMenusForRestaurant" asp-route-restaurantId="@item.Id" class="btn btn-primary">Menues</a>
                 <a asp-controller="Restaurants" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                 <a asp-controller="Restaurants" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
            
            </div>
        </div>
    </div>

    if(i % 3 == 2)
    {
        @:</div>
    }
}
